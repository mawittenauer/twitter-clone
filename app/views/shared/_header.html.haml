.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button(class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Twitter Clone", root_path, class: "navbar-brand"
    .collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
      %ul.nav.navbar-nav
        - if logged_in?
          %li= link_to "Sign Out", sign_out_path
          %li= link_to "All Users", users_path
          %li= link_to "My Profile", current_user
        - else
          %li= link_to "Sign In", sign_in_path
          %li= link_to "Register", register_path
      